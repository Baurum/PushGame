<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="clickgame.bau.com.clickgame.LeaderBoard">




    <TextView   android:id="@+id/tv_user_last_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_margin="20dp"
                android:textSize="30sp"
                android:textStyle="bold|italic"
     />

    <TextView android:id="@+id/tv_leaderboard_top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:paddingTop="10dp"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        />

    <TextView android:id="@+id/tv_leaderboard_top2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />

    <TextView android:id="@+id/tv_leaderboard_top5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:textAlignment="center"
        android:layout_margin="20dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:text="@string/btn_reset_top"
        android:textColor="@color/btn_reset_top"
        android:onClick="resetTop"
        />
</LinearLayout>
